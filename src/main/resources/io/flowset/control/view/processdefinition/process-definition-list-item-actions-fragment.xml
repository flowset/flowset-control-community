<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <collection id="processDefinitionsDc" class="io.flowset.control.entity.processdefinition.ProcessDefinitionData" provided="true"/>
    </data>

    <content>
        <hbox minWidth="min-content" themeNames="spacing-xs" justifyContent="END" alignItems="BASELINE">
            <button id="startProcessBtn" themeNames="tertiary-inline" icon="PLAY_CIRCLE" classNames="data-grid-column-action"
                    title="msg://processDefinitionList.start" visible="false"/>
            <button id="activateBtn" themeNames="tertiary-inline" icon="PLAY" classNames="data-grid-column-action"
                    title="msg://processDefinitionList.activate" visible="false"/>
            <dropdownButton id="activeProcessActions" visible="false" dropdownIndicatorVisible="false" classNames="data-grid-column-action"
                            themeNames="tertiary-inline" icon="ELLIPSIS_DOTS_V">
                <items>
                    <componentItem id="delete">
                        <hbox alignItems="CENTER" justifyContent="START" classNames="text-error">
                            <icon icon="TRASH" size="1em"/>
                            <span text="msg://processDefinitionList.remove"/>
                        </hbox>
                    </componentItem>
                    <componentItem id="migrate">
                        <hbox alignItems="CENTER" justifyContent="START">
                            <icon icon="FORWARD" size="1em" />
                            <span text="msg://processDefinitionList.migrate"/>
                        </hbox>
                    </componentItem>
                    <componentItem id="suspend">
                        <hbox alignItems="CENTER" justifyContent="START">
                            <icon icon="PAUSE" size="1em" />
                            <span text="msg://processDefinitionList.suspend"/>
                        </hbox>
                    </componentItem>
                </items>
            </dropdownButton>
            <dropdownButton id="suspendedProcessActions" visible="false" dropdownIndicatorVisible="false" classNames="data-grid-column-action"
                            themeNames="tertiary-inline" icon="ELLIPSIS_DOTS_V">
                <items>
                    <componentItem id="delete" >
                        <hbox alignItems="CENTER" justifyContent="START" classNames="text-error">
                            <icon icon="TRASH" size="1em"/>
                            <span text="msg://processDefinitionList.remove"/>
                        </hbox>
                    </componentItem>
                    <componentItem id="migrate">
                        <hbox alignItems="CENTER" justifyContent="START">
                            <icon icon="FORWARD" size="1em" />
                            <span text="msg://processDefinitionList.migrate"/>
                        </hbox>
                    </componentItem>
                </items>
            </dropdownButton>
        </hbox>
    </content>
</fragment>