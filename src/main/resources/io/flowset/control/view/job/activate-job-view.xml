<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://activateJobView.title">
    <actions>
        <action id="activateAction"
                text="msg:///actions.Activate"
                icon="PLAY"
                actionVariant="PRIMARY"/>
        <action id="cancelAction"
                text="msg:///actions.Cancel"
                type="view_close"
                icon="BAN"/>
    </actions>

    <layout>
        <span text="msg://activateJobConfirmation.text" width="100%"/>

        <hbox justifyContent="END" width="100%">
            <button id="suspendBtn" action="activateAction"/>
            <button id="cancelBtn" action="cancelAction"/>
        </hbox>
    </layout>
</view>