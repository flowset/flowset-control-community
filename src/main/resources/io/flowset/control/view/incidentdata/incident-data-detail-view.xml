<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://incidentDataDetailView.title"
      focusComponent="form">
    <data>
        <instance id="incidentDataDc"
                  class="io.flowset.control.entity.incident.IncidentData">
            <loader id="incidentDataDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="closeAction" type="detail_close"/>
        <action id="copyIdAction" type="control_copyComponentValueToClipboard">
            <properties>
                <property name="text" value=""/>
            </properties>
        </action>
        <action id="copyConfigurationAction" type="control_copyComponentValueToClipboard">
            <properties>
                <property name="text" value=""/>
            </properties>
        </action>
        <action id="openJobAction" icon="SEARCH" description="msg://openJobAction.text"/>
        <action id="openExternalTaskAction" icon="SEARCH" description="msg://openExternalTask.text"/>
    </actions>
    <layout expand="form">
        <formLayout id="form" dataContainer="incidentDataDc">
            <vbox width="100%" themeNames="spacing-s" classNames="bordered-container">
                <vbox width="100%" themeNames="spacing-s">
                    <h4 text="msg://generalGroup"/>
                    <textField id="incidentIdField"
                               width="100%"
                               label="msg://io.flowset.control.entity.incident/IncidentData.id"
                               property="incidentId" readOnly="true">
                        <suffix>
                            <button id="copyIdBtn" action="copyIdAction" themeNames="tertiary-inline"/>
                        </suffix>
                    </textField>
                    <div width="100%"
                         classNames="grid grid-flow-row grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-s">
                        <dateTimePicker id="timestampField" width="auto"
                                        label="msg://io.flowset.control.entity.incident/IncidentData.timestamp"
                                        property="timestamp" readOnly="true" step="1ms"/>
                        <textField id="typeField"
                                   label="msg://io.flowset.control.entity.incident/IncidentData.type" width="100%"
                                   property="type"
                                   readOnly="true"/>
                    </div>

                    <textArea id="messageField" property="message" width="100%" colspan="2"
                              minHeight="6em" classNames="vertical-resize"
                              label="msg://io.flowset.control.entity.incident/IncidentData.message" readOnly="true">
                        <suffix>
                            <button id="viewStacktraceBtn" themeNames="tertiary-inline" icon="CODE"/>
                        </suffix>
                    </textArea>

                    <textField id="configurationField" property="configuration" readOnly="true" width="100%"
                               label="msg://io.flowset.control.entity.incident/IncidentData.configuration">
                        <suffix>
                            <button id="configurationBtn" themeNames="tertiary-inline"/>
                        </suffix>
                    </textField>
                </vbox>
            </vbox>
            <vbox width="100%" height="100%" themeNames="spacing-s" classNames="bordered-container">
                <vbox width="100%" themeNames="spacing-s">
                    <h4 text="msg://processAndActivityGroup"/>
                    <textField id="processInstanceIdField" property="processInstanceId" readOnly="true"
                               label="msg://io.flowset.control.entity.incident/IncidentData.processInstanceId"
                               width="100%">
                        <suffix>
                            <button id="viewProcessInstanceBtn" icon="SEARCH" themeNames="tertiary-inline"/>
                        </suffix>
                    </textField>
                    <textField id="processDefinitionIdField"
                               label="msg://io.flowset.control.entity.incident/IncidentData.processDefinitionId"
                               readOnly="true" width="100%">
                        <suffix>
                            <button id="viewProcessBtn" icon="SEARCH" themeNames="tertiary-inline"/>
                        </suffix>
                    </textField>
                    <textField id="activityIdField" property="activityId"
                               label="msg://io.flowset.control.entity.incident/IncidentData.activityId"
                               readOnly="true" width="100%"/>
                    <textField id="failedActivityIdField" property="failedActivityId"
                               label="msg://io.flowset.control.entity.incident/IncidentData.failedActivityId"
                               readOnly="true"
                               width="100%"/>
                </vbox>
            </vbox>
            <vbox width="100%" themeNames="spacing-s" classNames="bordered-container mt-m">
                <vbox width="100%" themeNames="spacing-s">
                    <h4 text="msg://relatedIncidentsGroup"/>
                    <textField id="causeIncidentIdField" width="100%" readOnly="true"
                               label="msg://io.flowset.control.entity.incident/IncidentData.causeIncidentId"
                               classNames="pt-s">
                        <suffix>
                            <button id="viewCauseIncidentBtn" icon="SEARCH" themeNames="tertiary-inline"/>
                        </suffix>
                    </textField>
                    <textField id="rootCauseIncidentIdField" readOnly="true"
                               label="msg://io.flowset.control.entity.incident/IncidentData.rootCauseIncidentId"
                               width="100%"
                               classNames="pt-s">
                        <suffix>
                            <button id="viewRootCauseIncidentBtn" icon="SEARCH" themeNames="tertiary-inline"/>
                        </suffix>
                    </textField>
                </vbox>
            </vbox>
        </formLayout>
        <hbox id="detailActions" width="100%">
            <button id="retryBtn" icon="ROTATE_LEFT" themeNames="primary" text="msg:///actions.Retry"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
