<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://decisionInstanceDetailView.title">
    <data>
        <instance id="decisionInstanceDc"
                  class="io.flowset.control.entity.decisioninstance.HistoricDecisionInstanceShortData">
            <loader id="decisionInstanceDl" readOnly="true"/>
            <collection id="inputsDc" property="inputs"/>
            <collection id="outputsDc" property="outputs"/>
        </instance>
        <instance id="decisionDefinitionDc" class="io.flowset.control.entity.decisiondefinition.DecisionDefinitionData"/>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="closeAction" type="view_close" text="msg:///actions.Close"/>
        <action id="copyToClipboardAction" type="control_copyComponentValueToClipboard"/>
    </actions>
    <layout expand="box" padding="false" spacing="false" height="100%">
        <hbox id="box" width="100%" spacing="false" classNames="overflow-hidden">
            <split orientation="VERTICAL" width="100%" height="100%" splitterPosition="60"
                   themeNames="splitter-spacing">
                <div height="100%" classNames="decision-instance-details-diagram-box m-s">
                    <fragment id="dmnViewerFragment" class="io.flowset.uikit.fragment.dmnviewer.DmnViewerFragment"/>
                </div>
                <div classNames="p-s">
                    <tabSheet id="tabsheet" themeNames="hide-scroll-buttons bordered" height="100%" width="100%" minHeight="30em" classNames="box-border flex-grow">
                        <tab id="inputsTab" label="msg://inputs.tab">
                            <dataGrid id="inputsDataGrid"
                                      width="100%"
                                      height="100%"
                                      dataContainer="inputsDc"
                                      columnReorderingAllowed="true">
                                <columns resizable="true">
                                    <column property="clauseName"/>
                                    <column property="typeName"/>
                                    <column key="value" header="msg://valueColumn.header" sortable="false"/>
                                </columns>
                            </dataGrid>
                        </tab>
                        <tab id="outputsTab" label="msg://outputs.tab">
                            <dataGrid id="outputsDataGrid"
                                      width="100%"
                                      height="100%"
                                      dataContainer="outputsDc"
                                      columnReorderingAllowed="true">
                                <columns resizable="true">
                                    <column property="clauseName"/>
                                    <column property="typeName"/>
                                    <column key="value" header="msg://valueColumn.header" sortable="false"/>
                                </columns>
                            </dataGrid>
                        </tab>
                    </tabSheet>
                </div>
            </split>
            <fragment class="io.flowset.control.view.decisioninstance.DecisionInstanceGeneralPanelFragment"/>
        </hbox>
        <hbox id="detailActions" width="100%" classNames="sticky-buttons-bottom-panel p-s">
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
